<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="124dp"
    android:layout_height="194dp"
    android:padding="2dp">

    <RelativeLayout
        android:layout_width="124dp"
        android:layout_height="194dp">
        <!-- Resort Header -->
        <TextView
            android:id="@+id/resort_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="2dp"
            android:layout_centerHorizontal="true"
            android:shadowColor="#80000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:text="Brighton Resort"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold" />
        <!-- Travel To -->
        <TextView
            android:id="@+id/to_static"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/resort_name"
            android:layout_marginTop="4dp"
            android:layout_marginStart="14dp"
            android:shadowColor="#80000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:text="To:"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/travel_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/resort_name"
            android:layout_marginStart="9dp"
            android:layout_marginTop="-6dp"
            android:layout_toEndOf="@id/to_static"
            android:shadowColor="#80000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:text="22"
            android:textColor="#000000"
            android:textSize="36sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/to_resort_mins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/resort_name"
            android:layout_marginStart="2dp"
            android:layout_marginTop="21dp"
            android:layout_toEndOf="@id/travel_up"
            android:shadowColor="#80000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:text="mins"
            android:textColor="#000000"
            android:textSize="10sp"
            android:textStyle="normal" />

      <!-- Travel From -->
      <TextView
          android:id="@+id/from_static"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/travel_up"
          android:layout_marginTop="1dp"
          android:shadowColor="#80000000"
          android:shadowDx="1"
          android:shadowDy="1"
          android:shadowRadius="2"
          android:text="From:"
          android:textColor="#000000"
          android:textSize="12sp"
          android:textStyle="italic" />

      <TextView
          android:id="@+id/travel_down"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/travel_up"
          android:layout_marginStart="10dp"
          android:layout_marginTop="-7dp"
          android:layout_toEndOf="@id/from_static"
          android:shadowColor="#80000000"
          android:shadowDx="1"
          android:shadowDy="1"
          android:shadowRadius="2"
          android:text="24"
          android:textColor="#000000"
          android:textSize="36sp"
          android:textStyle="normal" />

      <TextView
          android:id="@+id/from_resort_mins"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/travel_up"
          android:layout_marginStart="2dp"
          android:layout_marginTop="21dp"
          android:layout_toEndOf="@id/travel_down"
          android:shadowColor="#80000000"
          android:shadowDx="1"
          android:shadowDy="1"
          android:shadowRadius="2"
          android:text="mins"
          android:textColor="#000000"
          android:textSize="10sp"
          android:textStyle="normal" />

        <!-- Alerts -->
        <!-- Alerts Parking -->
        <TextView
            android:id="@+id/alerts_parking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/travel_down"
            android:layout_marginTop="-8dp"
            android:shadowColor="#80000000"
            android:maxWidth="108dp"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:text="Parking open."
            android:layout_centerHorizontal="true"
            android:textColor="#000000"
            android:textSize="10sp"
            android:textStyle="italic" />
        <TextView
            android:id="@+id/alerts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/alerts_parking"
            android:layout_marginTop="-2dp"
            android:shadowColor="#80000000"
            android:maxWidth="108dp"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:text="Alerts none."
            android:layout_centerHorizontal="true"
            android:textColor="#000000"
            android:textSize="10sp"
            android:textStyle="italic" />

        <!-- Alerts Weather -->
        <TextView
            android:id="@+id/operating_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/alerts"
            android:layout_marginTop="2dp"
            android:shadowColor="#80000000"
            android:layout_centerHorizontal="true"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:text="Hours: 9am -9pm"
            android:textColor="#000000"
            android:textSize="10sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/next_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/operating_hours"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:shadowColor="#80000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:text="next update: 3:45 mins"
            android:textColor="#000000"
            android:textSize="8sp"
            android:textStyle="normal" />


    </RelativeLayout>

</FrameLayout>
